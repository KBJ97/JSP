		<h3>3.반복문</h3>
		
		<h4>for</h4>
		<%
			for(int i=1; i<=3; i++){
				out.println("<p>i : "+i+"</p>");
			}
		%>
		
		<% for(int i=1; i<=3; i++){ %>
			<p>i : <%= i %></p>
		<% } %>
		<h4>while</h4>
		<%
			int j =1;
			while(j<=3){
		%>
		<p>j : <%= j %></p>
		<%
				j++;
			}
		%>
